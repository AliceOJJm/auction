<div class="panel panel-default col-xs-6">
	<div class="panel-heading">
		Pictures
	</div>
	<div class="panel-body">
		<div  ng-repeat="picture in lot.pictures">
			<img src="picture.url">
		</div>
    	<c ng-hide="lot.pictures.length" class="center">No pictures uploaded.</c>
	</div>
	<timeline>
		<timeline-event ng-repeat="bid in bids.reverse()" side="left">
		  <timeline-badge class="success" ng-if="bid.is_final == 0">
		      <i class="glyphicon glyphicon-check"></i>
		  </timeline-badge>
		  <timeline-badge class="danger" ng-if="bid.is_final == 1">
		      <i class="glyphicon glyphicon-check"></i>
		  </timeline-badge>
		  <timeline-panel class="primary">
		      <timeline-heading>
		          <h4><b>Price: {{bid.price}}</b></h4>
		      </timeline-heading>
		      <div class="row">
		          <div class="col-sm-4">
		              time: {{bid.created_at}}
		          </div>
		          <div class="col-sm-4">
		              id: {{bid.user_id}}
		          </div>
		      </div>
		  </timeline-panel>
		</timeline-event>
	</timeline>
</div>
<div class="col-xs-6">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h4>{{lot.title}}</h4>
		</div>
			<div class="panel-body">
	  			{{lot.description}}
			</div>
		<form class="row" ng-submit="createBid()" ng-if="current_user.id != lot.user_id">
			<div class="col-xs-8">
				<input class="form-control" type="number" ng-model="bid.price">
			</div>
			<div class="col-xs-2">
				<button type="submit" class="btn btn-success btn-sm">Bid</button>
			</div>
		</form>
	</div>
	<div class="panel panel-primary"> 
	    <timer end-time="lot.expires_at"> 
	      <table class="table table-striped"> 
	        <thead> 
	          <tr> 
	            <th style="text-align: center">Days</th> 
	            <th style="text-align: center">Hours</th> 
	            <th style="text-align: center">Minutes</th> 
	            <th style="text-align: center">Seconds</th> 
	          </tr> 
	        </thead> 
	        <tbody> 
	          <tr> 
	            <th style="text-align: center">{{days}}</th> 
	            <th style="text-align: center">{{hours}}</th> 
	            <th style="text-align: center">{{minutes}}</th> 
	            <th style="text-align: center">{{seconds}}</th> 
	          </tr> 
	        </tbody> 
	      </table> 
	    </timer> 
	</div> 
	<canvas id="line" class="chart chart-line" chart-data="chart.data" chart-labels="chart.labels"
			 chart-legend="true" chart-series="chart.series"></canvas> 


</div>